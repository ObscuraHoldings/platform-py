# Strategy Execution Platform - .env.example
# Copy to .env for local development. Values align with docker-compose defaults.

# --- Platform ---
PLATFORM_ENVIRONMENT=development
PLATFORM_DEBUG=true

# --- API ---
PLATFORM_API_HOST=0.0.0.0
PLATFORM_API_PORT=8000

# --- Database (TimescaleDB) ---
PLATFORM_DATABASE__HOST=localhost
PLATFORM_DATABASE__PORT=5432
PLATFORM_DATABASE__DATABASE=platform_events
PLATFORM_DATABASE__USERNAME=platform
PLATFORM_DATABASE__PASSWORD=platform_secure_pass
PLATFORM_DATABASE__POOL_SIZE=20
PLATFORM_DATABASE__MAX_OVERFLOW=10
PLATFORM_DATABASE__MAX_SIZE=30

# --- Redis ---
PLATFORM_REDIS__HOST=localhost
PLATFORM_REDIS__PORT=6379
PLATFORM_REDIS__DB=0
# PLATFORM_REDIS__PASSWORD=
PLATFORM_REDIS__MAX_CONNECTIONS=50
PLATFORM_REDIS__DECODE_RESPONSES=true

# --- NATS (JSON array) ---
PLATFORM_NATS__SERVERS=["nats://localhost:4222"]
PLATFORM_NATS__MAX_RECONNECT_ATTEMPTS=60
PLATFORM_NATS__RECONNECT_TIME_WAIT=2.0

# --- Ray Client ---
PLATFORM_RAY__ADDRESS=ray://localhost:10001
PLATFORM_RAY__NUM_CPUS=4
PLATFORM_RAY__NUM_GPUS=0
PLATFORM_RAY__OBJECT_STORE_MEMORY=2147483648

# --- ML ---
PLATFORM_ML__MODEL_CACHE_DIR=./models
PLATFORM_ML__GPU_MEMORY_FRACTION=0.8
PLATFORM_ML__ENABLE_ONNX_OPTIMIZATION=true
PLATFORM_ML__MAX_MODEL_CACHE_SIZE=10

# --- Network (preferred) ---
PLATFORM_NETWORK__NAME=sepolia
PLATFORM_NETWORK__CHAIN_ID=11155111
PLATFORM_NETWORK__RPC_URL_TEMPLATE=https://eth-sepolia.g.alchemy.com/v2/{API_KEY}
PLATFORM_NETWORK__API_KEY=YOUR_KEY
PLATFORM_NETWORK__BLOCK_CONFIRMATIONS=6

# Legacy: RPC URLs JSON (optional; overrides Network if set)
# PLATFORM_RPC_URLS={"1":"https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY","11155111":"https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY"}

# --- Performance / Flags ---
PLATFORM_MAX_INTENT_QUEUE_SIZE=10000
PLATFORM_INTENT_PROCESSING_TIMEOUT=30.0
PLATFORM_EVENT_BUFFER_SIZE=1000
PLATFORM_ENABLE_LEGACY_INTENT_QUEUE=false
